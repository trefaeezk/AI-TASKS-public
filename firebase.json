      "NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET": "tasks-intelligence.appspot.com",
      "NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID": "770714758504",
      "NEXT_PUBLIC_FIREBASE_APP_ID": "1:770714758504:web:aea98ba39a726df1ba3add"
